<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>pollEditServlet</servlet-name>
        <servlet-class>com.company.servlet.PollEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pollEditServlet</servlet-name>
        <url-pattern>/admin/polls</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>adminMenuServlet</servlet-name>
        <servlet-class>com.company.servlet.AdminMenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminMenuServlet</servlet-name>
        <url-pattern>/admin/menu</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>